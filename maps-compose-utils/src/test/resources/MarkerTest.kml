<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2">
  <Document>
    <name>Test Placemarks with StyleMap</name>

    <!-- Define Styles -->
    <Style id="style1">
      <IconStyle>
        <color>ff0000ff</color> <!-- Blue color for icon -->
        <heading>0</heading> <!-- Heading in degrees clockwise from North -->
        <Icon>
          <href>http://maps.google.com/mapfiles/kml/paddle/blu-blank.png</href> <!-- Icon URL -->
        </Icon>
      </IconStyle>
    </Style>

    <Style id="style2">
      <IconStyle>
        <color>ff00ff00</color> <!-- Green color for icon -->
        <heading>90</heading> <!-- Heading in degrees clockwise from North -->
        <Icon>
          <href>http://maps.google.com/mapfiles/kml/paddle/grn-blank.png</href> <!-- Icon URL -->
        </Icon>
      </IconStyle>
    </Style>

    <Style id="style3">
      <IconStyle>
        <color>ffff0000</color> <!-- Red color for icon -->
        <heading>180</heading> <!-- Heading in degrees clockwise from North -->
        <Icon>
          <href>http://maps.google.com/mapfiles/kml/paddle/red-blank.png</href> <!-- Icon URL -->
        </Icon>
      </IconStyle>
    </Style>

    <!-- Define StyleMap -->
    <StyleMap id="styleMap1">
      <Pair>
        <key>normal</key>
        <styleUrl>#style1</styleUrl>
      </Pair>
      <Pair>
        <key>highlight</key>
        <styleUrl>#style1</styleUrl>
      </Pair>
    </StyleMap>

    <StyleMap id="styleMap2">
      <Pair>
        <key>normal</key>
        <styleUrl>#style2</styleUrl>
      </Pair>
      <Pair>
        <key>highlight</key>
        <styleUrl>#style2</styleUrl>
      </Pair>
    </StyleMap>

    <StyleMap id="styleMap3">
      <Pair>
        <key>normal</key>
        <styleUrl>#style3</styleUrl>
      </Pair>
      <Pair>
        <key>highlight</key>
        <styleUrl>#style3</styleUrl>
      </Pair>
    </StyleMap>

    <!-- Placemarks -->
    <!-- Placemark 1 -->
    <Placemark>
      <name>Placemark 1</name>
      <styleUrl>#styleMap1</styleUrl>
      <description><![CDATA[<b>Placemark 1</b><br/>This is the first placemark.<br/>]]></description>
      <Point>
        <coordinates>-122.083739,37.422065</coordinates> <!-- San Francisco, USA -->
      </Point>
      <visibility>1</visibility>
      <drawOrder>1</drawOrder>
    </Placemark>
    <!-- Placemark 2 -->
    <Placemark>
      <name>Placemark 2</name>
      <styleUrl>#styleMap2</styleUrl>
      <description><![CDATA[<b>Placemark 2</b><br/>This is the second placemark.<br/>]]></description>
      <Point>
        <coordinates>139.6917,35.6895</coordinates> <!-- Tokyo, Japan -->
      </Point>
      <visibility>1</visibility>
      <drawOrder>2</drawOrder>
    </Placemark>
    <!-- Placemark 3 -->
    <Placemark>
      <name>Placemark 3</name>
      <styleUrl>#styleMap3</styleUrl>
      <description><![CDATA[<b>Placemark 3</b><br/>This is the third placemark.<br/>]]></description>
      <Point>
        <coordinates>-0.1276,51.5074</coordinates> <!-- London, UK -->
      </Point>
      <visibility>1</visibility>
      <drawOrder>3</drawOrder>
    </Placemark>
  </Document>
</kml>
